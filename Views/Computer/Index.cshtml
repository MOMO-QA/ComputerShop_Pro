@model List<Computer>

<h2>All Computers</h2>
 
<table class="table">
<thead>
<tr>
<th>Description</th>
<th>Price</th>
<th>Details</th>
</tr>
</thead>
<tbody>

@foreach (var computer in Model)
{
<tr>
<td>@computer.Description</td>
<td>@computer.Price</td>
<td><a href="@Url.Action("Details", "Computer", new { ID = computer.ID })">View Details</a></td>
</tr>       
        }
</tbody>
</table>
